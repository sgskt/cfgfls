% siunitx
% *****************************************************************
\usepackage{siunitx} % centering in tables
\sisetup{
    detect-mode,
    tight-spacing		= true,
    group-digits		= false ,
    input-signs		= ,
    input-symbols		= ( ) [ ] - + *,
    input-open-uncertainty	= ,
    input-close-uncertainty	= ,
    table-align-text-post	= false
}
